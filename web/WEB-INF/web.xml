<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CompanyDashboard</servlet-name>
        <servlet-class>com.stagemont.controller.company.Dashboard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentList</servlet-name>
        <servlet-class>com.stagemont.controller.teacher.StudentList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompanyList</servlet-name>
        <servlet-class>com.stagemont.controller.teacher.CompanyList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminCompanyList</servlet-name>
        <servlet-class>com.stagemont.controller.admin.CompanyList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminStudentList</servlet-name>
        <servlet-class>com.stagemont.controller.admin.StudentList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompanyContract</servlet-name>
        <servlet-class>com.stagemont.controller.company.Contract</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CompanyDashboard</servlet-name>
        <url-pattern>/company/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentList</servlet-name>
        <url-pattern>/teacher/studentlist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompanyList</servlet-name>
        <url-pattern>/teacher/companylist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminCompanyList</servlet-name>
        <url-pattern>/admin/companylist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminStudentList</servlet-name>
        <url-pattern>/admin/studentlist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompanyContract</servlet-name>
        <url-pattern>/company/contract</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
